{
    "name": "@iramoncode/easymde",
    "version": "2.12.4",
    "description": "A simple, beautiful, and embeddable JavaScript Markdown editor that easy to use. Features include autosaving and spell checking.",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "files": [
        "dist/**/*",
        "src/**/*",
        "types/easymde.d.ts"
    ],
    "keywords": [
        "embeddable",
        "markdown",
        "editor",
        "javascript",
        "fontawesome"
    ],
    "main": "src/js/easymde.js",
    "types": "types/easymde.d.ts",
    "license": "MIT",
    "author": "Jeroen Akkerman",
    "dependencies": {
        "codemirror": "^5.58.1",
        "codemirror-spell-checker": "1.1.2",
        "marked": "^1.2.0"
    },
    "devDependencies": {
        "@types/codemirror": "0.0.98",
        "@types/marked": "^1.1.0",
        "browserify": "^16.5.2",
        "gulp": "^4.0.2",
        "gulp-clean-css": "^4.2.0",
        "gulp-concat": "^2.6.1",
        "gulp-eslint": "^6.0.0",
        "gulp-header": "^2.0.9",
        "gulp-rename": "^2.0.0",
        "gulp-terser": "^1.4.0",
        "gulp-uglify": "^3.0.2",
        "typescript": "^4.0.3",
        "vinyl-buffer": "^1.0.0",
        "vinyl-source-stream": "^2.0.0"
    },
    "repository": "github:iramonCode/easymde",
    "scripts": {
        "prepare": "gulp",
        "test": "npm run lint && npm run test:types",
        "lint": "gulp lint",
        "test:types": "tsc --project types/tsconfig.json"
    }
}
